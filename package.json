{
  "name": "auto-mermaid",
  "version": "0.0.1",
  "description": "Converts schema from your favourite database to mermaid ERD.",
  "main": "./engine/src/index.ts",
  "bin": "./engine/src/index.ts",
  "scripts": {
    "test": "jest --coverage ",
    "lint": "eslint src/**/*.ts --fix",
    "start": "nodemon --watch \"*.ts\"  --watch \"*.json\" --exec \"ts-node\" ./engine/src/index.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "_moduleAliases": {
    "@": "./engine/src",
    "@modules": "./engine/src/modules",
    "@utils": "./engine/src/utils",
    "@libs": "./engine/src/libs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/punitsu/auto-mermaid.git"
  },
  "keywords": [
    "Mermaid",
    "ERD",
    "Database",
    "Schema"
  ],
  "author": "Punit Sureka",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/punitsu/auto-mermaid/issues"
  },
  "homepage": "https://github.com/punitsu/auto-mermaid#readme",
  "dependencies": {
    "commander": "^11.1.0",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.3",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/commander": "^2.12.2",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
